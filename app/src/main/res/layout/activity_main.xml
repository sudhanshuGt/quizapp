<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#F4EEEE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C214A"
        android:padding="10sp">
        
        <TextView
            android:id="@+id/selectedTopicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz App"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true">
        </TextView>


    </RelativeLayout>

    <TextView
        android:id="@+id/quizQuestionNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="../.."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/optionsbg"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/quistionbg"
        android:layout_marginTop="5sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="loding..."
            android:textColor="@color/white"
            android:textSize="20sp"
            app:fontFamily="@font/boogaloo"></TextView>



        <ImageView
            android:id="@+id/questionImage"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:src="@drawable/java"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"> 
        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:text="loading.."
            app:fontFamily="@font/courier_prime"
            android:background="@drawable/optionsbg"
            android:textAllCaps="false"
            android:textColor="@color/black"

            android:textSize="15sp">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            app:fontFamily="@font/courier_prime"
            android:text="loading.."
            android:background="@drawable/optionsbg"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            app:fontFamily="@font/courier_prime"
            android:text="loading.."
            android:background="@drawable/optionsbg"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp">
        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:text="loading.."
            app:fontFamily="@font/courier_prime"
            android:background="@drawable/optionsbg"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/next"
            android:text="Next"
            android:textAllCaps="false"
            app:iconGravity="textEnd"
            app:iconSize="10dp"
            android:textColor="#1868F1"
            android:enabled="false"
            android:alpha="0.7"
            android:backgroundTint="@color/white"
            app:iconTint="#F14318"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">
        </com.google.android.material.button.MaterialButton>

    </RelativeLayout>



</LinearLayout>